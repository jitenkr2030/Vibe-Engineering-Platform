# Environment Template for Vibe Engineering Platform
# Copy this file to .env and fill in your values

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
POSTGRES_USER=vibe_user
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=vibe_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ==============================================================================
# JWT & SECURITY
# ==============================================================================
JWT_SECRET=generate_a_secure_random_string_here_at_least_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ==============================================================================
# FILE STORAGE (MinIO/S3)
# ==============================================================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_this_password_in_production
MINIO_REGION=us-east-1
MINIO_BUCKET=vibe-files
MINIO_USE_SSL=false

# ==============================================================================
# AI PROVIDERS
# ==============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ==============================================================================
# FRONTEND CONFIGURATION
# ==============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================================================
# PORT CONFIGURATION
# ==============================================================================
FRONTEND_PORT=3000
BACKEND_PORT=3001
POSTGRES_PORT=5432
REDIS_PORT=6379
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_TELEMETRY=false

# ==============================================================================
# EMAIL CONFIGURATION (Optional)
# ==============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@vibe.dev
